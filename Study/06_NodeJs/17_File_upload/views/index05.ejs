<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>index04</title>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <style>
    .profile {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      box-shadow: 0 0 20px black;
    }
  </style>
</head>
<body>
  <h1>Fields File Upload</h1>
  <form action="/upload/fields" method="post" enctype="multipart/form-data">
    <input type="file" name="userfile1">
    <input type="file" name="userfile2">
    <button type="submit">Sumbit</button>
  </form>

  <h1>Dynamic Form</h1>
  <input type="text" name="title" id="title" placeholder="Title">
  <input type="file" name="dynamicFile" id="dynamicFile">
  <button type="button" onclick="fileUpload()">upload</button>
  <!-- 업로드된 이미지를 보여줄 img 태그 -->
  <img src="" alt="">

  <script>
    function fileUpload() {
      const title = document.querySelector('#title');
      const file = document.querySelector('#dynamicFile');

      // FormData : 폼의 내용을 전송하기 쉽게 해주는 함수, axios, ajax와 함께 사용한다.
      const formData = new FormData();
      formData.append('title', title.value);
      formData.append('dynamicFile', file.files[0]);

      axios({
        method: 'post',
        url: '/dynamic',
        data: formData,
        Headers: {'Content-Type': 'multipart/form-data'},
      }).then(res => {
        console.log(res.data);
        const {file, title} = res.data;
        const img = document.querySelector('img');
        img.src = '/' + file.path;
        img.alt = title;
        img.classList.add('profile');
      })
    }
  </script>
</body>
</html>